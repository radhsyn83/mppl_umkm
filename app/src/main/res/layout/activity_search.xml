<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.radhzyn83.mpplumkm.activity.MainActivity">

    <android.support.design.widget.AppBarLayout
        app:elevation="10dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:hint="@string/search_hint"
                    android:textColorHint="@color/grey"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:tint="@color/title"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:padding="8dp"
                    android:background="@drawable/btn_transparent_black"
                    app:srcCompat="@drawable/ic_search"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/search_rv"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="10dp"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/search_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_sentiment_dissatisfied_black_24dp"
            android:tint="@color/light_grey"/>
        <TextView
            android:id="@+id/error_title"
            android:layout_width="160dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
